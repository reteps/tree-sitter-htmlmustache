{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HTML Mustache",
  "scopeName": "text.html.htmlmustache",
  "_comment": "Extends VS Code's built-in HTML grammar to add Mustache support. The LSP semantic tokens handle HTML/Mustache highlighting, while this grammar provides embedded language support for script/style tags.",
  "patterns": [
    { "include": "#mustache-comment" },
    { "include": "text.html.basic" }
  ],
  "repository": {
    "mustache-comment": {
      "name": "comment.block.mustache",
      "begin": "\\{\\{!",
      "end": "\\}\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.comment.begin.mustache" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.comment.end.mustache" }
      }
    }
  }
}
